{
  "title": "local_settings",
  "rules": [
    {
      "description": "fn + numberでf1, f2, f3...",
      "manipulators": [
            {
                "from": {
                    "key_code": "1",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "f1"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "2",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "f2"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "3",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "f3"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "4",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "f4"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "5",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "f5"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "6",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "f6"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "7",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "f7"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "8",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "f8"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "9",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "f9"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "0",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "f0"
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
      "description": "fn + hjklで矢印キー",
      "manipulators": [
            {
                "from": {
                    "key_code": "h",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "left_arrow"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "j",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "down_arrow"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "k",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "up_arrow"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "l",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "right_arrow"
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
      "description": "Ctrl+cを押したときに、英数キーも送信",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "control"
              ]
            },
            {
              "key_code": "escape"
            },
            {
              "key_code": "japanese_eisuu"
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+j -> return_or_enter",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                  "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+[を押したときに、英数キーも送信する（vim用） (rev 2)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": [
                "control"
              ]
            },
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "keyboard_type_if",
              "keyboard_types": [
                "ansi",
                "iso"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": [
                "control"
              ]
            },
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "conditions": [
            {
              "type": "keyboard_type_if",
              "keyboard_types": [
                "ansi",
                "iso"
              ]
            },
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": [
                "control"
              ]
            },
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }

          ],
          "conditions": [
            {
              "type": "keyboard_type_if",
              "keyboard_types": [
                "jis"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "f20 -> ctrl + shift + alt + cmd",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f20",
            "modifiers": {
              "optional": [
                "any"
              ]
            } 
          },
          "to": {
            "key_code": "right_shift",
            "modifiers": [
              "right_command",
              "right_control",
              "right_option"
            ]
          }
        }
      ]
    }
  ]
}
